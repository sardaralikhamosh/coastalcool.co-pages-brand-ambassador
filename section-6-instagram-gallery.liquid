{% comment %}
  Section: Instagram Gallery
  Description: "The swimwear brand you're seeing everywhere" with image grid and follow button
{% endcomment %}

<style>
  .instagram-section {
    padding: 80px 20px;
    background: #ffffff;
  }

  .instagram-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .instagram-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
    flex-wrap: wrap;
    gap: 20px;
  }

  .instagram-title {
    font-family: 'Helvetica Neue', 'Arial', sans-serif;
    font-size: 32px;
    font-weight: 900;
    margin: 0;
    color: #000000;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .instagram-follow-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 30px;
    background: hsl(333.39deg 80.42% 71.96%);
    color: #ffffff;
    text-decoration: none;
    border-radius: 25px;
    font-family: 'Helvetica Neue', 'Arial', sans-serif;
    font-size: 14px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid hsl(333.39deg 80.42% 71.96%);
  }

  .instagram-follow-btn:hover {
    background: hsl(333.39deg 80.42% 65%);
    border-color: hsl(333.39deg 80.42% 65%);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 105, 180, 0.3);
  }

  .instagram-icon {
    width: 20px;
    height: 20px;
  }

  .instagram-icon svg {
    width: 100%;
    height: 100%;
    fill: white;
  }

  .instagram-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 15px;
  }

  .instagram-item {
    position: relative;
    padding-bottom: 100%;
    overflow: hidden;
    border-radius: 10px;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .instagram-item:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    z-index: 10;
  }

  .instagram-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .instagram-item:hover .instagram-image {
    transform: scale(1.1);
  }

  .instagram-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(255, 105, 180, 0.8), rgba(255, 0, 128, 0.6));
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .instagram-item:hover .instagram-overlay {
    opacity: 1;
  }

  .instagram-overlay-icon {
    width: 40px;
    height: 40px;
  }

  .instagram-overlay-icon svg {
    width: 100%;
    height: 100%;
    fill: white;
  }

  @media (max-width: 1200px) {
    .instagram-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (max-width: 768px) {
    .instagram-section {
      padding: 60px 20px;
    }

    .instagram-header {
      flex-direction: column;
      align-items: flex-start;
      margin-bottom: 30px;
    }

    .instagram-title {
      font-size: 24px;
    }

    .instagram-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 12px;
    }
  }

  @media (max-width: 480px) {
    .instagram-title {
      font-size: 20px;
      letter-spacing: 0.5px;
    }

    .instagram-follow-btn {
      padding: 10px 25px;
      font-size: 13px;
    }

    .instagram-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 10px;
    }
  }
</style>

<section class="instagram-section">
  <div class="instagram-container">
    <div class="instagram-header">
      <h2 class="instagram-title">{{ section.settings.title }}</h2>
      
      <a href="{{ section.settings.instagram_url }}" class="instagram-follow-btn" target="_blank" rel="noopener">
        <span class="instagram-icon">
          <svg viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </span>
        {{ section.settings.follow_text }}
      </a>
    </div>

    <div class="instagram-grid">
      {% for block in section.blocks %}
        {% if block.type == 'image' %}
          <div class="instagram-item" {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
              <img 
                src="{{ block.settings.image | image_url: width: 500 }}" 
                alt="{{ block.settings.image_alt | default: 'Instagram post' }}"
                class="instagram-image"
                loading="lazy"
              >
            {% else %}
              <img 
                src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 400 400'%3E%3Crect fill='%23f0f0f0' width='400' height='400'/%3E%3Ctext x='50%25' y='50%25' text-anchor='middle' dy='.3em' fill='%23999' font-family='sans-serif' font-size='30'%3EImage%3C/text%3E%3C/svg%3E"
                alt="Placeholder"
                class="instagram-image"
              >
            {% endif %}
            
            <div class="instagram-overlay">
              <span class="instagram-overlay-icon">
                <svg viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </span>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

