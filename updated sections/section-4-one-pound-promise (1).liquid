{% comment %}
  Section: One Pound Promise - Statistics
  Description: Environmental impact statistics with icons and numbers
{% endcomment %}

<style>
  .promise-section {
    padding: 80px 20px;
    background: linear-gradient(135deg, hsl(333.39deg 80.42% 71.96%) 0%, hsl(333.39deg 80.42% 65%) 100%);
    color: #ffffff;
  }

  .promise-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .promise-title {
    font-family: 'Poppins', 'Helvetica Neue', 'Arial', sans-serif;
    font-size: 36px;
    font-weight: 700;
    text-align: center;
    margin: 0 0 60px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #ffffff;
  }

  .promise-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .promise-stat-item {
    text-align: center;
    animation: fadeInUp 0.8s ease forwards;
    opacity: 0;
  }

  .promise-stat-item:nth-child(1) { animation-delay: 0.1s; }
  .promise-stat-item:nth-child(2) { animation-delay: 0.2s; }
  .promise-stat-item:nth-child(3) { animation-delay: 0.3s; }
  .promise-stat-item:nth-child(4) { animation-delay: 0.4s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .promise-icon {
    width: 70px;
    height: 70px;
    margin: 0 auto 25px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .promise-icon svg {
    width: 100%;
    height: 100%;
    fill: none;
    stroke: #ffffff;
    stroke-width: 2;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .promise-number {
    font-family: 'Poppins', 'Helvetica Neue', 'Arial', sans-serif;
    font-size: 48px;
    font-weight: 700;
    margin: 0 0 10px;
    color: #ffffff;
    letter-spacing: -1px;
  }

  .promise-label {
    font-family: 'Poppins', sans-serif;
    font-size: 15px;
    font-weight: 400;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.95);
    max-width: 250px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .promise-section {
      padding: 60px 20px;
    }

    .promise-title {
      font-size: 32px;
      margin-bottom: 45px;
      letter-spacing: 1.5px;
    }

    .promise-stats {
      grid-template-columns: repeat(2, 1fr);
      gap: 35px;
    }

    .promise-number {
      font-size: 42px;
    }

    .promise-label {
      font-size: 14px;
    }
  }

  @media (max-width: 480px) {
    .promise-title {
      font-size: 28px;
      letter-spacing: 1px;
    }

    .promise-stats {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .promise-icon {
      width: 60px;
      height: 60px;
      margin-bottom: 20px;
    }

    .promise-number {
      font-size: 36px;
    }
  }
</style>

<section class="promise-section">
  <div class="promise-container">
    <h2 class="promise-title">{{ section.settings.title }}</h2>

    <div class="promise-stats">
      {% for block in section.blocks %}
        {% if block.type == 'stat' %}
          <div class="promise-stat-item" {{ block.shopify_attributes }}>
            <div class="promise-icon">
              {% case block.settings.icon %}
                {% when 'calendar' %}
                  <!-- Events/Calendar Icon -->
                  <svg viewBox="0 0 24 24">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                    <line x1="16" y1="2" x2="16" y2="6"/>
                    <line x1="8" y1="2" x2="8" y2="6"/>
                    <line x1="3" y1="10" x2="21" y2="10"/>
                    <circle cx="8" cy="14" r="1"/>
                    <circle cx="12" cy="14" r="1"/>
                    <circle cx="16" cy="14" r="1"/>
                    <circle cx="8" cy="18" r="1"/>
                    <circle cx="12" cy="18" r="1"/>
                  </svg>
                {% when 'camera' %}
                  <!-- Photography/Camera Icon -->
                  <svg viewBox="0 0 24 24">
                    <path d="M23 19C23 19.5304 22.7893 20.0391 22.4142 20.4142C22.0391 20.7893 21.5304 21 21 21H3C2.46957 21 1.96086 20.7893 1.58579 20.4142C1.21071 20.0391 1 19.5304 1 19V8C1 7.46957 1.21071 6.96086 1.58579 6.58579C1.96086 6.21071 2.46957 6 3 6H7L9 3H15L17 6H21C21.5304 6 22.0391 6.21071 22.4142 6.58579C22.7893 6.96086 23 7.46957 23 8V19Z"/>
                    <circle cx="12" cy="13" r="4"/>
                  </svg>
                {% when 'leaf' %}
                  <!-- Organic/Leaf Icon -->
                  <svg viewBox="0 0 24 24">
                    <path d="M17 8C8 10 5.9 16.17 3.82 21.34L5.71 22L6.66 19.7C7.14 19.87 7.64 20 8 20C19 20 22 3 22 3C21 5 14 5.25 9 6.25C4 7.25 2 11.5 2 13.5C2 15.5 3.75 17.25 3.75 17.25C7 8 17 8 17 8Z"/>
                  </svg>
                {% when 'heart' %}
                  <!-- Memories/Good Vibes/Heart Icon -->
                  <svg viewBox="0 0 24 24">
                    <path d="M20.84 4.61C20.3292 4.099 19.7228 3.69364 19.0554 3.41708C18.3879 3.14052 17.6725 2.99817 16.95 2.99817C16.2275 2.99817 15.5121 3.14052 14.8446 3.41708C14.1772 3.69364 13.5708 4.099 13.06 4.61L12 5.67L10.94 4.61C9.9083 3.57831 8.50903 2.99871 7.05 2.99871C5.59096 2.99871 4.19169 3.57831 3.16 4.61C2.1283 5.64169 1.54871 7.04097 1.54871 8.5C1.54871 9.95903 2.1283 11.3583 3.16 12.39L4.22 13.45L12 21.23L19.78 13.45L20.84 12.39C21.351 11.8792 21.7563 11.2728 22.0329 10.6054C22.3095 9.93789 22.4518 9.22248 22.4518 8.5C22.4518 7.77752 22.3095 7.0621 22.0329 6.39464C21.7563 5.72718 21.351 5.12084 20.84 4.61V4.61Z"/>
                    <line x1="12" y1="8" x2="12" y2="13"/>
                    <line x1="9.5" y1="10.5" x2="14.5" y2="10.5"/>
                  </svg>
                {% else %}
                  <!-- Default fallback icon -->
                  <svg viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M12 6v6l4 2"/>
                  </svg>
              {% endcase %}
            </div>

            <div class="promise-number">{{ block.settings.number }}</div>
            <div class="promise-label">{{ block.settings.label }}</div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

