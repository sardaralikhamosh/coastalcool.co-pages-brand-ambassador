{% comment %}
  Section: One Pound Promise - Statistics
  Description: Environmental impact statistics with icons and numbers
{% endcomment %}

<style>
  .promise-section {
    padding: 80px 20px;
    background: hsl(333.39deg 80.42% 71.96%);
    color: #ffffff;
  }

  .promise-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .promise-title {
    font-family: 'Helvetica Neue', 'Arial', sans-serif;
    font-size: 42px;
    font-weight: 900;
    text-align: center;
    margin: 0 0 60px;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #ffffff;
  }

  .promise-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 50px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .promise-stat-item {
    text-align: center;
    animation: fadeInUp 0.8s ease forwards;
    opacity: 0;
  }

  .promise-stat-item:nth-child(1) { animation-delay: 0.1s; }
  .promise-stat-item:nth-child(2) { animation-delay: 0.2s; }
  .promise-stat-item:nth-child(3) { animation-delay: 0.3s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .promise-icon {
    width: 70px;
    height: 70px;
    margin: 0 auto 25px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .promise-icon svg {
    width: 100%;
    height: 100%;
    fill: none;
    stroke: #ffffff;
    stroke-width: 2;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .promise-number {
    font-family: 'Helvetica Neue', 'Arial', sans-serif;
    font-size: 48px;
    font-weight: 900;
    margin: 0 0 10px;
    color: #ffffff;
    letter-spacing: -1px;
  }

  .promise-label {
    font-family: 'Georgia', serif;
    font-size: 15px;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.95);
    max-width: 250px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .promise-section {
      padding: 60px 20px;
    }

    .promise-title {
      font-size: 32px;
      margin-bottom: 45px;
      letter-spacing: 1.5px;
    }

    .promise-stats {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .promise-number {
      font-size: 42px;
    }

    .promise-label {
      font-size: 14px;
    }
  }

  @media (max-width: 480px) {
    .promise-title {
      font-size: 28px;
      letter-spacing: 1px;
    }

    .promise-icon {
      width: 60px;
      height: 60px;
      margin-bottom: 20px;
    }

    .promise-number {
      font-size: 36px;
    }
  }
</style>

<section class="promise-section">
  <div class="promise-container">
    <h2 class="promise-title">{{ section.settings.title }}</h2>

    <div class="promise-stats">
      {% for block in section.blocks %}
        {% if block.type == 'stat' %}
          <div class="promise-stat-item" {{ block.shopify_attributes }}>
            <div class="promise-icon">
              {% case block.settings.icon %}
                {% when 'bottle' %}
                  <svg viewBox="0 0 24 24">
                    <path d="M9 3V4H7V6H9V8C7.34 8.64 6 10.25 6 12V20C6 21.1 6.9 22 8 22H16C17.1 22 18 21.1 18 20V12C18 10.25 16.66 8.64 15 8V6H17V4H15V3H9Z"/>
                  </svg>
                {% when 'package' %}
                  <svg viewBox="0 0 24 24">
                    <path d="M21 16V8C21 7.45 20.55 7 20 7H13L11 5H4C3.45 5 3 5.45 3 6V18C3 18.55 3.45 19 4 19H20C20.55 19 21 18.55 21 18V17"/>
                    <rect x="3" y="8" width="18" height="2"/>
                    <path d="M12 4L9 7H15L12 4Z"/>
                  </svg>
                {% when 'sun' %}
                  <svg viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="5"/>
                    <line x1="12" y1="1" x2="12" y2="3"/>
                    <line x1="12" y1="21" x2="12" y2="23"/>
                    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
                    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
                    <line x1="1" y1="12" x2="3" y2="12"/>
                    <line x1="21" y1="12" x2="23" y2="12"/>
                    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
                    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
                  </svg>
                {% else %}
                  <svg viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M12 6v6l4 2"/>
                  </svg>
              {% endcase %}
            </div>

            <div class="promise-number">{{ block.settings.number }}</div>
            <div class="promise-label">{{ block.settings.label }}</div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "One Pound Promise",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "ONE POUND PROMISE"
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Statistic",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "bottle",
              "label": "Bottle"
            },
            {
              "value": "package",
              "label": "Package"
            },
            {
              "value": "sun",
              "label": "Sun"
            }
          ],
          "default": "bottle"
        },
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "75,000+"
        },
        {
          "type": "textarea",
          "id": "label",
          "label": "Label",
          "default": "Plastic Bottles Removed"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "One Pound Promise",
      "blocks": [
        {
          "type": "stat",
          "settings": {
            "icon": "bottle",
            "number": "75,000+",
            "label": "Plastic Bottles Removed"
          }
        },
        {
          "type": "stat",
          "settings": {
            "icon": "package",
            "number": "3,000+",
            "label": "Pounds of Ocean Plastic Removed"
          }
        },
        {
          "type": "stat",
          "settings": {
            "icon": "sun",
            "number": "1 Pound",
            "label": "Of Ocean Plastic Removed Per Product"
          }
        }
      ]
    }
  ]
}
{% endschema %}
